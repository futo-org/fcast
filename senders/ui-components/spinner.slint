import { FluentPalette, FCastPalette } from "styling.slint";
import { SpinnerBase } from "spinner-base.slint";

export component Spinner {
    in property <float> progress <=> base.progress;
    in property <bool> indeterminate <=> base.indeterminate;

    min-width: 15px;
    min-height: 15px;
    horizontal-stretch: 0;
    vertical-stretch: 0;
    accessible-role: progress-indicator;
    accessible-value: !root.indeterminate ? root.progress : "";
    accessible-value-minimum: 0.0;
    accessible-value-maximum: 1.0;

    base := SpinnerBase {
        width: 100%;
        height: 100%;
        stroke-width: 3px;
        stroke: FCastPalette.brand-600;
    }
}
