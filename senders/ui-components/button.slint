import { FluentFontSettings, FluentPalette, FCastPalette } from "styling.slint";
import { FocusBorder } from "components.slint";

export component Button {
    in property <string> text;
    in property <image> icon;
    in property <length> icon-size: 20px;
    in property <bool> primary;
    in property <bool> enabled <=> i-touch-area.enabled;
    in property <bool> checkable;
    in property <bool> colorize-icon;
    in property <angle> icon-rotation: 0deg;

    // in property <color> background-default-color: FCastPalette.button-default-background;
    in property <brush> background-default-color: FCastPalette.button-default-background;
    in property <color> background-default-drop-shadow-color: FCastPalette.button-default-drop-shadow-color;

    in property <color> text-color-disabled: FCastPalette.button-disabled-text-color;
    in property <color> background-disabled: FCastPalette.button-pressed-background;
    in property <color> background-drop-shadow-color-disabled: FCastPalette.button-pressed-drop-shadow-color;
    in property <color> border-color-disabled: FCastPalette.button-pressed-border-color;

    in property <color> text-color-pressed-primary: FluentPalette.text-accent-foreground-secondary;
    in property <color> text-color-pressed-secondary: FluentPalette.text-secondary;
    in property <color> background-pressed: FCastPalette.button-pressed-background;
    in property <color> background-drop-shadow-color-pressed: FCastPalette.button-pressed-drop-shadow-color;
    in property <color> border-color-pressed: FCastPalette.button-pressed-border-color;

    in property <color> background-hover: FCastPalette.button-hover-background;
    in property <color> background-drop-shadow-color-hover: FCastPalette.button-hover-drop-shadow-color;
    in property <color> border-color-hover: FCastPalette.button-hover-border-color;

    in property <color> border-color: FCastPalette.button-default-border-color;

    out property <bool> has-focus: i-focus-scope.has-focus;
    out property <bool> pressed: self.enabled && i-touch-area.pressed;
    in-out property <bool> checked;

    callback clicked;

    // private property <brush> text-color: primary || checked ? FluentPalette.accent-foreground : FluentPalette.control-foreground;
    in-out property <color> text-color: FluentPalette.control-foreground;

    // min-width: max(32px, i-layout.min-width);
    min-width: max(36px, i-layout.min-width);
    min-height: max(36px, i-layout.min-height);
    horizontal-stretch: 0;
    vertical-stretch: 0;
    forward-focus: i-focus-scope;

    accessible-role: button;
    accessible-enabled: root.enabled;
    accessible-checkable: root.checkable;
    accessible-checked: root.checked;
    accessible-label: root.text;
    accessible-action-default => { i-touch-area.clicked(); }

    states [
        disabled when !root.enabled : {
            // root.text-color: FCastPalette.button-disabled-text-color;
            root.text-color: text-color-disabled;
            // i-background.background: FCastPalette.button-pressed-background;
            i-background.background: background-disabled;
            // i-background.drop-shadow-color: FCastPalette.button-pressed-drop-shadow-color;
            i-background.drop-shadow-color: background-drop-shadow-color-disabled;
            // i-border.border-color: FCastPalette.button-pressed-border-color;
            i-border.border-color: border-color-disabled;
        }
        pressed when root.pressed : {
            // root.text-color: root.primary || root.checked ? FluentPalette.text-accent-foreground-secondary : FluentPalette.text-secondary;
            root.text-color: root.primary || root.checked ? text-color-pressed-primary : text-color-pressed-secondary;
            i-background.background: background-pressed;
            i-background.drop-shadow-color: background-drop-shadow-color-pressed;
            i-border.border-color: border-color-pressed;
            // i-background.background: FCastPalette.button-pressed-background;
            // i-background.drop-shadow-color: FCastPalette.button-pressed-drop-shadow-color;
            // i-border.border-color: FCastPalette.button-pressed-border-color;
        }
        hover when i-touch-area.has-hover : {
            // i-background.background: FCastPalette.button-hover-background;
            // i-background.drop-shadow-color: FCastPalette.button-hover-drop-shadow-color;
            // i-border.border-color: FCastPalette.button-hover-border-color;

            i-background.background: background-hover;
            i-background.drop-shadow-color: background-drop-shadow-color-hover;
            i-border.border-color: border-color-hover;
        }
        checked when root.checked : {
            i-background.background: FluentPalette.accent-background;
            i-border.border-color: FluentPalette.accent-control-border;
            root.text-color: FluentPalette.accent-foreground;
        }
    ]

    i-background := Rectangle {
        // Circle when icon only
        border-radius: root.text == "" ? self.height : 6px;

        // background: FCastPalette.button-default-background;
        background: background-default-color;
        // drop-shadow-color: FCastPalette.button-default-drop-shadow-color;
        drop-shadow-color: background-default-drop-shadow-color;

        animate border-color { duration: 150ms; }

        animate background { duration: 100ms; }

        // animate background, border-color { duration: 150ms; }
        i-border := Rectangle {
            border-radius: parent.border-radius;
            border-width: 1px;

            // border-color: FCastPalette.button-default-border-color;
            border-color: border-color;

            animate border-color { duration: 50ms; }
        }

        i-layout := HorizontalLayout {
            padding-left: 12px;
            padding-right: 12px;
            padding-top: 5px;
            padding-bottom: 5px;
            spacing: 8px;
            alignment: center;

            if (root.icon.width > 0 && root.icon.height > 0) : Image {
                y: (parent.height - self.height) / 2;
                source <=> root.icon;
                width: root.icon-size;
                min-height: root.icon-size;
                colorize: root.colorize-icon ? root.text-color : transparent;
                transform-rotation: icon-rotation;
            }

            if (root.text != ""): Text {
                font-size: FluentFontSettings.body.font-size;
                font-weight: FluentFontSettings.body.font-weight;
                horizontal-alignment: center;
                vertical-alignment: center;
                text: root.text;
                color: root.text-color;
                // animate color { duration: 150ms; }
                accessible-role: none;
            }
        }
    }

    i-touch-area := TouchArea {
        // mouse-cursor: pointer;

        clicked => {
            if (root.checkable) {
                root.checked = !root.checked;
            }
            root.clicked();
        }
    }

    i-focus-scope := FocusScope {
        x: 0;
        width: 0; // Do not react on clicks
        enabled <=> root.enabled;

        key-pressed(event) => {
            if (event.text == " " || event.text == "\n") {
                i-touch-area.clicked();
                 return accept;
            }

            return reject;
        }
    }

    // focus border
    if (root.has-focus && root.enabled) : FocusBorder {
        border-radius: i-background.border-radius;
    }
}
